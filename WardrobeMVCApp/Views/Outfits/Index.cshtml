@model IEnumerable<WardrobeMVCApp.Models.Outfit>

@{
    ViewBag.Title = "Index";
}
<div class="page-header">
    <h1>Outfits<small> Putting it all together to look your best.</small></h1>
    <h3>@Html.ActionLink("Create New", "Create")</h3>
</div>
@foreach (var item in Model)
{

    <div class="col-sm-3 col-md-3">
        <div class="thumbnail" id="bottomThumbnail">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.OutfitName)</h3>
               
                <p><span>@Html.ActionLink("View", "Details", new { id = item.OutfitID })</span>  <span>@Html.ActionLink("Edit", "Edit", new { id = item.OutfitID })</span>  <span>@Html.ActionLink("Delete", "Delete", new { id = item.OutfitID })</span></p>
            </div>



        </div>
    </div>
}

